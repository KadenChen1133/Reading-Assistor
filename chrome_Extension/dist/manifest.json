{
    "manifest_version": 3,
    "name": "Personalized reading Experience",
    "description": "A Chrome extension for reading",
    "version": "1.0",
    "icons": {
        "16": "icons.png",
        "48": "icons.png",
        "128": "icons.png"
    },
    "permissions": [
    "activeTab",
    "scripting",
    "fontSettings" 
  ],
  "background": {
    "service_worker": "background.js"
  },
    "action": {
        "default_title": "Click Me", 
        "default_popup": "popup.html"
    },
    "host_permissions": [
    "<all_urls>" 
  ]
}


